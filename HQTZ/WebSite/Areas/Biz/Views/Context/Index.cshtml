@{
    ViewBag.Title = "内容管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row-fluid">
    <div class="row-fluid header blue btn-header">
        <button class="btn btn-primary btn-mini add">&nbsp;&nbsp;新 增&nbsp;&nbsp;</button>
    </div>
    <div class="table-container">
        <table id="5308584827791714" class=" table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th data-option="{sequence:true}">序号</th>
                    <th data-option="{bind:'Title'}">标题</th>
                    <th data-option="{bind:'IsTop',checkbox:true}">是否置顶</th>
                    <th data-option="{bind:'CreateBy'}">创建人</th>
                    <th data-option="{bind:'CreateOn_G'}">创建时间</th>
                    <th data-option="{bind:'EditBy'}">修改人</th>
                    <th data-option="{bind:'EditOn_G'}">修改时间</th>
                    <th data-option="{edit:true,del:true}">操作</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<div class="row-fluid">
    <div class="span10">
        <form name="23083348615572768" id="23083348615572768" class="layerout form-layer">
            <div>
                <input type="hidden" name="ID" />
                <div class="row-fluid">
                    <div class="span8">
                        <label>标题</label>
                        <input type="text" name="Title" id="3908878671016653" class="span11" />
                    </div>
                    <div class="span4">
                        <label>是否置顶</label>
                        <input type="checkbox" name="IsTop" /><span class="lbl"></span>
                    </div>
                    <div class="span12">
                        <label>内容</label>
                        <textarea name="Context" id="6704092404590007" class="span12 text_editor_hide"></textarea>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
@section scripts
{
    <script type="text/javascript">

        function BindToSelect(data) {
        }

        function BindToDiv(data) {
        }

        $(function () {

            $("#5308584827791714").datagrid({ url: "/Biz/Context/LoadContext", psize: 10 });

            $("#5308584827791714").datagrid("onEdit", function () {
                var json = $("#5308584827791714").datagrid("getCurrData");
                $("#23083348615572768").bindEntity(json);
                $("#23083348615572768").open("编辑", function (win) {
                    if (!tt.validateForm("23083348615572768")) {
                        return false;
                    }
                    var update = $("#23083348615572768").getContext();
                    $.post("/Biz/Context/SaveContext", update, function (r) {
                        var newjson = $.updateJson(json, $.toJsResult(r));
                        if (r.ID > 0) {
                            $("#5308584827791714").datagrid("updateRow", json, newjson);
                            layer.close(win);
                        }
                        else {
                            alert("保存失败，请重试！");
                        }

                    });

                    return false;
                });
            });

            $("#5308584827791714").datagrid("onDelete", function () {
                if (confirm("确定要删除吗？")) {
                    var json = $("#5308584827791714").datagrid("getCurrData");
                    $.post("/Biz/Context/DeleteContext", { ID: json["ID"] }, function (r) {
                        if (r > 0) {
                            $("#5308584827791714").datagrid("removeCurrRow");
                        }
                        else {
                            alert("删除失败，请重试！");
                        }
                    });
                }
            });

            $(".add").bind('click', function () {
                $("#23083348615572768").bindEntity({});
                $("#23083348615572768").open("新增", function (win) {
                    if (!tt.validateForm("23083348615572768")) {
                        return false;
                    }
                    var update = $("#23083348615572768").getContext();
                    $.post("/Biz/Context/SaveContext", update, function (r) {
                        r = $.toJsResult(r);
                        if (r.ID > 0) {
                            $("#5308584827791714").datagrid("addRow", r);
                            layer.close(win);
                        }
                        else {
                            alert("保存失败，请重试！");
                        }
                    });

                    return false;
                });
            });
        });

        /*增加验证信息----------Start*/
        var ftitle = new tt.Field("标题", "", "3908878671016653").setMsgId("layer-error-msg");
        tt.vf.req.add(ftitle);
        var fcontent = new tt.Field("内容", "", "6704092404590007").setMsgId("layer-error-msg");
        tt.vf.req.add(fcontent);
        /*增加验证信息----------End*/
    </script>
}
