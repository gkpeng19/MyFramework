@{
    ViewBag.Title = "资讯管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row-fluid">
    <div class="span4">
        <div class="row-fluid header blue btn-header">
            <button class="btn btn-primary btn-small btn-addcategory">新增根节点</button>
        </div>
        <div id="tree_category"></div>
    </div>
    <div class="span8">
        <div class="row-fluid header blue btn-header">
            <button class="btn btn-primary btn-small btn-table-add">新 增</button>
        </div>
        <table id="6690632095343458" class=" table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th data-option="{sequence:true}">序号</th>
                    <th data-option="{bind:'Title'}">标题</th>
                    <th data-option="{bind:'IsTop',checkbox:true}">是否置顶</th>
                    <th data-option="{bind:'CreateBy'}">创建人</th>
                    <th data-option="{bind:'CreateOn_G'}">创建时间</th>
                    <th data-option="{bind:'EditBy'}">修改人</th>
                    <th data-option="{bind:'EditOn_G'}">修改时间</th>
                    <th data-option="{edit:true,del:true}">操作</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<div class="row-fluid">
    <div class="span8">
        <form name="08991986788186862" id="08991986788186862" class="form-layer" style="display:none;">
            <div>
                <input type="hidden" name="ID" />
                <div class="row-fluid">
                    <div class="span8">
                        <label>标题</label>
                        <input type="text" name="Title" id="9626476976205301" class="span11" />
                    </div>
                    <div class="span4">
                        <label>是否置顶</label>
                        <input type="checkbox" name="IsTop" id="9098404458337839" /><span class="lbl"></span>
                    </div>
                    <div class="span12">
                        <label>内容</label>
                        <textarea name="Context" id="4685794825157846" class="span12 text_editor_hide"></textarea>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="row-fluid">
    <div class="span3">
        <form name="fm_category" id="fm_category" class="form-layer" style="display:none;">
            <div>
                <input type="hidden" name="ID" />
                <input type="hidden" name="ParentID" value="0" />
                <div class="row-fluid">
                    <div class="span12">
                        <label>分类名称</label>
                        <input type="text" name="Name" id="txt_categoryName" class="span11" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section styles
{
    <link href="~/Scripts/jstree/themes/default/style.min.css" rel="stylesheet" />
}

@section scripts
{
    <script src="~/Scripts/jstree/jstree.min.js"></script>
    <script type="text/javascript">

        $('#tree_category').jstree({
            'core': {
                'data': {
                    "url": "/Biz/Context/LoadInfoCategories",
                    "dataType": "json"
                }
            }
        });

        $('#tree_category').on("loaded.jstree", function () {
            var tree = $('#tree_category').jstree(true);
            tree.select_node(0);
           
        });

        var selectedNode = {};
        $('#tree_category').on("changed.jstree", function (e, data) {
            if (data.selected.length) {
                selectedNode = data.instance.get_node(data.selected[0]);

                //刷新右边表格
                $("#6690632095343458").datagrid({ url: "/Biz/Context/LoadInfo", psize: 10, search: { categoryid: selectedNode.id } });
            }
        });

        /*For分类树开始*/
        $(".btn-addcategory").bind("click", function () {
            $("#fm_category").bindEntity({ ParentID: selectedNode.id });
            $("#fm_category").open("新增分类", function (win) {
                if (!tt.validateForm("fm_category")) {
                    return false;
                }
                var update = $("#fm_category").getContext();
                $.post("/Biz/Context/SaveCategory", update, function (r) {
                    r = $.toJsResult(r);
                    if (r.ID > 0) {
                        //更新树
                        layer.close(win);
                    }
                    else {
                        $.error("保存失败，请重试！");
                    }
                });

                return false;
            });
        });

        /*For分类树结束*/

        function BindToSelect(data) {
        }

        function BindToDiv(data) {
        }

        $(function () {

            //$("#6690632095343458").datagrid({ url: "/Biz/Context/LoadInfo", psize: 10 });


            $("#6690632095343458").parent().find(".btn-table-add").bind('click', function () {
                $("#08991986788186862").bindEntity({});
                $("#08991986788186862").open("新增", function (win) {
                    if (!tt.validateForm("08991986788186862")) {
                        return false;
                    }
                    var update = $("#08991986788186862").getContext();
                    $.post("/Biz/Context/SaveInfo", update, function (r) {
                        r = $.toJsResult(r);
                        if (r.ID > 0) {
                            $("#6690632095343458").datagrid("addRow", r);
                            layer.close(win);
                        }
                        else {
                            $.error("保存失败，请重试！");
                        }
                    });

                    return false;
                });
            });
            $("#6690632095343458").datagrid("onEdit", function () {
                var json = $("#6690632095343458").datagrid("getCurrData");
                $("#08991986788186862").bindEntity(json);
                $("#08991986788186862").open("编辑", function (win) {
                    if (!tt.validateForm("08991986788186862")) {
                        return false;
                    }
                    var update = $("#08991986788186862").getContext();
                    $.post("/Biz/Context/SaveInfo", update, function (r) {
                        var newjson = $.updateJson(json, $.toJsResult(r));
                        if (r.ID > 0) {
                            $("#6690632095343458").datagrid("updateRow", json, newjson);
                            layer.close(win);
                        }
                        else {
                            $.error("保存失败，请重试！");
                        }
                    });

                    return false;
                });
            });


            $("#6690632095343458").datagrid("onDelete", function () {
                $.confirm("确定要删除吗？", function () {
                    var json = $("#6690632095343458").datagrid("getCurrData");
                    $.post("/Biz/Context/DeleteContext", { ID: json["ID"] }, function (r) {
                        if (r > 0) {
                            $("#6690632095343458").datagrid("removeCurrRow");
                        }
                        else {
                            $.error("删除失败，请重试！");
                        }
                    });
                });
            });

        });

        /*增加验证信息----------Start*/

        var f9626476976205301 = new tt.Field("标题", "", "9626476976205301").setMsgId("layer-error-msg");


        tt.vf.req.add(f9626476976205301);


        var f9098404458337839 = new tt.Field("是否置顶", "", "9098404458337839").setMsgId("layer-error-msg");


        var f4685794825157846 = new tt.Field("内容", "", "4685794825157846").setMsgId("layer-error-msg");


        tt.vf.req.add(f4685794825157846);

        var vf_category = new tt.Field("分类名称", "", "txt_categoryName").setMsgId("layer-error-msg");
        tt.vf.req.add(vf_category);

        /*增加验证信息----------End*/
    </script>
}