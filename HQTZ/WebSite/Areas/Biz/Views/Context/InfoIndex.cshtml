@{
    ViewBag.Title = "资讯管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row-fluid">
    <div class="span3">
        <div class="row-fluid header blue btn-header">
            <button class="btn btn-primary btn-mini btn-addroot">新增根节点</button>
            <button class="btn btn-primary btn-mini btn-addchild">新增</button>
            <button class="btn btn-primary btn-mini btn-editnode">编辑</button>
            <button class="btn btn-primary btn-mini btn-delnode">删除</button>
        </div>
        <div id="tree_category"></div>
    </div>
    <div class="span9">
        <div class="row-fluid header blue btn-header">
            <button class="btn btn-primary btn-mini btn-table-add">&nbsp;&nbsp;新 增&nbsp;&nbsp;</button>
            <button class="btn btn-primary btn-mini" id="btn-move">批量转移</button>
        </div>
        <div class="table-container">
            <table id="6690632095343458" class=" table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th data-option="{checkbox:true}" class="th-ckbox"></th>
                        <th data-option="{sequence:true}">序号</th>
                        <th data-option="{bind:'Title'}">标题</th>
                        <th data-option="{bind:'IsTop',checkbox:true}">是否置顶</th>
                        <th data-option="{bind:'InfoCategory_G'}">分类</th>
                        <th data-option="{bind:'CreateBy'}">创建人</th>
                        <th data-option="{bind:'CreateOn_G'}">创建时间</th>
                        <th data-option="{bind:'EditBy'}">修改人</th>
                        <th data-option="{bind:'EditOn_G'}">修改时间</th>
                        <th data-option="{edit:true,del:true}">操作</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

<div class="row-fluid">
    <div class="span10">
        <form name="08991986788186862" id="08991986788186862" class="layerout form-layer" style="display:none;">
            <div>
                <input type="hidden" name="ID" />
                <input type="hidden" name="CategoryID" />
                <div class="row-fluid">
                    <div class="span8">
                        <label>标题</label>
                        <input type="text" name="Title" id="9626476976205301" class="span11" />
                    </div>
                    <div class="span4">
                        <label>是否置顶</label>
                        <input type="checkbox" name="IsTop" id="9098404458337839" /><span class="lbl"></span>
                    </div>
                    <div class="span12">
                        <label>内容</label>
                        <textarea name="Context" id="4685794825157846" class="span12 text_editor_hide"></textarea>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="row-fluid">
    <div class="span3">
        <form name="fm_category" id="fm_category" class="layerout form-layer">
            <div>
                <input type="hidden" name="ID" />
                <input type="hidden" name="ParentID" value="0" />
                <div class="row-fluid">
                    <div class="span12">
                        <label>分类名称</label>
                        <input type="text" name="Name" id="txt_categoryName" class="span11" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="row-fluid">
    <div class="span3">
        <div id="targetTree" class="layerout" style="min-height:200px;"></div>
    </div>
</div>

@section styles
{
    <link href="~/Styles/gtree/themes/default/style.min.css" rel="stylesheet" />
}

@section scripts
{
    <script type="text/javascript">
        $("#tree_category").gtree({ url: "/Biz/Context/LoadInfoCategories" });
        $("#tree_category").gtree("beforeDeleteNode", function () {
            if ($("#6690632095343458").datagrid("hasChildren")) {
                $.error("请先删除该分类下的资讯！");
                return false;
            }
            $("#6690632095343458").datagrid("refresh");
            if ($("#6690632095343458").datagrid("hasChildren")) {
                $.error("请先删除该分类下的资讯！");
                return false;
            }
            return true;
        });

        $("#tree_category").gtree("selectChanged", function (json) {
            //刷新右边表格
            var cids = '-1';
            $(json.children_d).each(function () {
                cids += (',' + this);
            });
            $("#6690632095343458").datagrid({ url: "/Biz/Context/LoadInfo", search: { categoryids: cids } });
        });

        /*For分类树开始*/
        $(".btn-addroot").bind("click", function () {
            $("#fm_category").bindEntity({});
            EditCategory(true, true);
        });
        $(".btn-addchild").bind("click", function () {
            var snode = $("#tree_category").gtree("getSelected");
            if (snode) {
                $("#fm_category").bindEntity({ ParentID: snode.id });
                EditCategory(true, false);
            }
        });
        $(".btn-editnode").bind('click', function () {
            var snode = $("#tree_category").gtree("getSelected");
            if (snode) {
                $("#fm_category").bindEntity({ ID: snode.id, ParentID: snode.parentid, Name: snode.text });
                EditCategory(false, false);
            }
        });
        $(".btn-delnode").bind('click', function () {
            var snode = $("#tree_category").gtree("getSelected");
            if (snode) {
                $.confirm("确定要删除该分类吗？", function () {
                    if ($("#tree_category").gtree("removeSelectNode")) {
                        $.post("/Biz/Context/DeleteCategory", { ID: snode.id }, function (r) { });
                    }
                });
            }
        });

        function EditCategory(isAdd, isRoot) {
            $("#fm_category").open("新增分类", function (win) {
                if (!tt.validateForm("fm_category")) {
                    return false;
                }
                var update = $("#fm_category").getContext();
                $.post("/Biz/Context/SaveCategory", update, function (r) {
                    r = $.toJsResult(r);
                    var node = { id: r.ID, parentid: r.ParentID, text: r.Name };
                    if (r.ID > 0) {
                        //更新树
                        if (isAdd) {
                            if (isRoot) {
                                $("#tree_category").gtree("addRootNode", node);
                            }
                            else {
                                $("#tree_category").gtree("addChildNode", node);
                            }
                        }
                        else {
                            $("#tree_category").gtree("updateSelectNode", node);
                        }
                        layer.close(win);
                    }
                    else {
                        $.error("保存失败，请重试！");
                    }
                });

                return false;
            });
        }
        /*For分类树结束*/

        function BindToSelect(data) {
        }

        function BindToDiv(data) {
        }

        $("#6690632095343458").datagrid({ psize: 10 });

        $(".btn-table-add").bind('click', function () {
            var currCategory = $("#tree_category").gtree("getSelected");
            $("#08991986788186862").bindEntity({ CategoryID: currCategory.id });
            $("#08991986788186862").open("新增", function (win) {
                if (!tt.validateForm("08991986788186862")) {
                    return false;
                }
                var update = $("#08991986788186862").getContext();
                $.post("/Biz/Context/SaveInfo", update, function (r) {
                    r = $.toJsResult(r);
                    r.InfoCategory_G = currCategory.text;

                    if (r.ID > 0) {
                        $("#6690632095343458").datagrid("addRow", r);
                        layer.close(win);
                    }
                    else {
                        $.error("保存失败，请重试！");
                    }
                });

                return false;
            });
        });

        $("#6690632095343458").datagrid("onEdit", function () {
            var json = $("#6690632095343458").datagrid("getCurrData");
            $("#08991986788186862").bindEntity(json);
            $("#08991986788186862").open("编辑", function (win) {
                if (!tt.validateForm("08991986788186862")) {
                    return false;
                }
                var update = $("#08991986788186862").getContext();
                $.post("/Biz/Context/SaveInfo", update, function (r) {
                    var newjson = $.combineJson(json, $.toJsResult(r));
                    if (r.ID > 0) {
                        $("#6690632095343458").datagrid("updateRow", json, newjson);
                        layer.close(win);
                    }
                    else {
                        $.error("保存失败，请重试！");
                    }
                });

                return false;
            });
        });

        $("#6690632095343458").datagrid("onDelete", function () {
            $.confirm("确定要删除吗？", function () {
                var json = $("#6690632095343458").datagrid("getCurrData");
                $.post("/Biz/Context/DeleteContext", { ID: json["ID"] }, function (r) {
                    if (r > 0) {
                        $("#6690632095343458").datagrid("removeCurrRow");
                    }
                    else {
                        $.error("删除失败，请重试！");
                    }
                });
            });
        });

        /*增加验证信息----------Start*/

        var f9626476976205301 = new tt.Field("标题", "", "9626476976205301").setMsgId("layer-error-msg");


        tt.vf.req.add(f9626476976205301);


        var f9098404458337839 = new tt.Field("是否置顶", "", "9098404458337839").setMsgId("layer-error-msg");


        var f4685794825157846 = new tt.Field("内容", "", "4685794825157846").setMsgId("layer-error-msg");


        tt.vf.req.add(f4685794825157846);

        var vf_category = new tt.Field("分类名称", "", "txt_categoryName").setMsgId("layer-error-msg");
        tt.vf.req.add(vf_category);

        /*增加验证信息----------End*/
    </script>
    <script type="text/javascript">
        $("#btn-move").bind('click', function () {
            var sels = $("#6690632095343458").datagrid("getSelecteds");
            if (sels.length == 0) {
                $.error("请勾选资讯！");
                return;
            }

            $("#targetTree").gtree({ url: '/Biz/Context/LoadInfoCategories' });
            $("#targetTree").open("选择分类", function (win) {
                var snode = $("#targetTree").gtree("getSelected");
                var json = [];
                $(sels).each(function () {
                    json.push({ ID: this.ID, CategoryID: snode.id });
                });
                $.post("/Biz/Context/TransferInfo", { Contexts: json }, function (r) {
                    if (r > 0) {
                        layer.close(win);
                        $("#6690632095343458").datagrid("refresh");
                    }
                    else {
                        $.error("批量转移失败，请重试！");
                    }
                });
                return false;
            });
        });
    </script>
}