
@{
    ViewBag.Title = "产品管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row-fluid">
    <div class="span3">
        <div class="row-fluid header blue btn-header">
            <button class="btn btn-primary btn-mini btn-addroot">新增根节点</button>
            <button class="btn btn-primary btn-mini btn-addchild">新增</button>
            <button class="btn btn-primary btn-mini btn-editnode">编辑</button>
            <button class="btn btn-primary btn-mini btn-delnode">删除</button>
        </div>
        <div id="tree_category"></div>
    </div>
    <div class="span9">
        <div class="row-fluid header blue btn-header">
            <button class="btn btn-primary btn-mini btn-table-add">&nbsp;&nbsp;新 增&nbsp;&nbsp;</button>
            <button class="btn btn-primary btn-mini" id="btn-move">批量转移</button>
        </div>
        <div class="table-container">
            <table id="6690632095343458" class=" table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th data-option="{checkbox:true}" class="th-ckbox"></th>
                        <th data-option="{sequence:true}">序号</th>
                        <th data-option="{bind:'Name'}">名称</th>
                        <th data-option="{bind:'ProductCategory_G'}">分类</th>
                        <th data-option="{bind:'CreateBy'}">创建人</th>
                        <th data-option="{bind:'CreateOn_G'}">创建时间</th>
                        <th data-option="{bind:'EditBy'}">修改人</th>
                        <th data-option="{bind:'EditOn_G'}">修改时间</th>
                        <th data-option="{edit:true,del:true}">操作</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>


<div class="row-fluid">
    <div class="span3">
        <form name="fm_category" id="fm_category" class="layerout form-layer">
            <div>
                <input type="hidden" name="ID" />
                <input type="hidden" name="ParentID" value="0" />
                <div class="row-fluid">
                    <div class="span12">
                        <label>分类名称</label>
                        <input type="text" name="Name" id="txt_categoryName" class="span11" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<div class="row-fluid">
    <div class="span3">
        <div id="targetTree" class="layerout" style="min-height:200px;"></div>
    </div>
</div>

@section styles
{
    <link href="~/Styles/gtree/themes/default/style.min.css" rel="stylesheet" />
}

@section scripts
{
    <script type="text/javascript">
        $("#tree_category").gtree({ url: "/Biz/Product/LoadProductCategories" });
        $("#tree_category").gtree("selectChanged", function (json) {
            //刷新右边表格
            var cids = '-1';
            $(json.children_d).each(function () {
                cids += (',' + this);
            });
            //$("#6690632095343458").datagrid({ url: "/Biz/Context/LoadInfo", psize: 10, search: { categoryids: cids } });
            //initDgEvent();
        });

        /*For分类树开始*/
        $(".btn-addroot").bind("click", function () {
            $("#fm_category").bindEntity({});
            EditCategory(true, true);
        });
        $(".btn-addchild").bind("click", function () {
            var snode = $("#tree_category").gtree("getSelected");
            if (snode) {
                $("#fm_category").bindEntity({ ParentID: snode.id });
                EditCategory(true, false);
            }
        });
        $(".btn-editnode").bind('click', function () {
            var snode = $("#tree_category").gtree("getSelected");
            if (snode) {
                $("#fm_category").bindEntity({ ID: snode.id, ParentID: snode.parentid, Name: snode.text });
                EditCategory(false, false);
            }
        });
        $(".btn-delnode").bind('click', function () {
            var snode = $("#tree_category").gtree("getSelected");
            if (snode) {
                $.confirm("确定要删除该分类吗？", function () {
                    if ($("#tree_category").gtree("removeSelectNode")) {
                        $.post("/Biz/Product/DeleteCategory", { ID: snode.id }, function (r) { });
                    }
                });
            }
        });

        function EditCategory(isAdd, isRoot) {
            $("#fm_category").open("新增分类", function (win) {
                if (!tt.validateForm("fm_category")) {
                    return false;
                }
                var update = $("#fm_category").getContext();
                $.post("/Biz/Product/SaveCategory", update, function (r) {
                    r = $.toJsResult(r);
                    var node = { id: r.ID, parentid: r.ParentID, text: r.Name };
                    if (r.ID > 0) {
                        //更新树
                        if (isAdd) {
                            if (isRoot) {
                                $("#tree_category").gtree("addRootNode", node);
                            }
                            else {
                                $("#tree_category").gtree("addChildNode", node);
                            }
                        }
                        else {
                            $("#tree_category").gtree("updateSelectNode", node);
                        }
                        layer.close(win);
                    }
                    else {
                        $.error("保存失败，请重试！");
                    }
                });

                return false;
            });
        }
        /*For分类树结束*/

        var vf_category = new tt.Field("分类名称", "", "txt_categoryName").setMsgId("layer-error-msg");
        tt.vf.req.add(vf_category);
    </script>
}