@{
    ViewBag.Title = "会员管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row-fluid">
    <div class="row-fluid header blue btn-header">
        <button class="btn btn-primary btn-mini btn-table-add">&nbsp;&nbsp;新 增&nbsp;&nbsp;</button>
    </div>
    <div class="table-container">
        <table id="9503364891990309" class=" table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th data-option="{sequence:true}">序号</th>
                    <th data-option="{bind:'UserName'}">用户名</th>
                    <th data-option="{bind:'UserLevel_G'}">用户级别</th>
                    <th data-option="{bind:'UserType_G'}">用户类型</th>
                    <th data-option="{bind:'Email'}">Email地址</th>
                    <th data-option="{bind:'Phone'}">联系电话</th>
                    <th data-option="{bind:'CreateOn_G'}">注册时间</th>
                    <th data-option="{edit:true,del:true}">操作</th>
                </tr>
            </thead>
        </table>
    </div>
</div>


<div class="row-fluid">
    <div class="span8">
        <form name="859886693457639" id="859886693457639" class="layerout form-layer" style="display:none;">
            <div>
                <input type="hidden" name="ID" />
                <div class="row-fluid">
                    <div class="span6">
                        <label>用户名</label>
                        <input type="text" name="UserName" id="7044811142488172" class="span11" />
                    </div>
                    <div class="span6">
                        <label>用户级别</label>
                        <select name="UserLevel" id="5445589124838697" data-exname="UserLevel_G" class="span11"></select>
                    </div>
                    <div class="span6">
                        <label>用户类型</label>
                        <select name="UserType" id="28813988185502243" data-exname="UserType_G" class="span11"></select>
                    </div>
                    <div class="span6">
                        <label>Email地址</label>
                        <input type="text" name="Email" id="5394484878913651" class="span11" />
                    </div>
                    <div class="span6">
                        <label>联系电话</label>
                        <input type="text" name="Phone" id="5454595364665242" class="span11" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section scripts{
    <script type="text/javascript">

        $.post("/Biz/User/LoadCtnData", { ran: Math.random() }, function (r) {
            $(function () {
                BindToSelect(r);
                BindToDiv(r);
            });
        });



        function BindToSelect(data) {

            var sel = $("#5445589124838697");
            var items = data.UserLevels;
            $(items).each(function () {
                sel.append("<option value='" + this.v + "'>" + this.k + "</option>");
            });


            var sel = $("#28813988185502243");
            var items = data.UserTypes;
            $(items).each(function () {
                sel.append("<option value='" + this.v + "'>" + this.k + "</option>");
            });

        }

        function BindToDiv(data) {
        }

        $(function () {

            $("#9503364891990309").datagrid({ url: "/Biz/User/LoadUsers", psize: 10 });


            $("#9503364891990309").datagrid("onDelete", function () {
                $.confirm("确定要删除吗？", function () {
                    var json = $("#9503364891990309").datagrid("getCurrData");
                    $.post("/Biz/User/DeleteUser", { ID: json["ID"] }, function (r) {
                        if (r > 0) {
                            $("#9503364891990309").datagrid("removeCurrRow");
                        }
                        else {
                            $.error("删除失败，请重试！");
                        }
                    });
                });
            });


            $(".btn-table-add").bind('click', function () {
                $("#859886693457639").bindEntity({});
                $("#859886693457639").open("新增", function (win) {
                    if (!tt.validateForm("859886693457639")) {
                        return false;
                    }
                    var update = $("#859886693457639").getContext();
                    $.post("/Biz/User/SaveUser", update, function (r) {
                        r = $.toJsResult(r);
                        if (r.ID > 0) {
                            $("#9503364891990309").datagrid("addRow", r);
                            layer.close(win);
                        }
                        else {
                            $.error("保存失败，请重试！");
                        }
                    });

                    return false;
                });
            });
            $("#9503364891990309").datagrid("onEdit", function () {
                var json = $("#9503364891990309").datagrid("getCurrData");
                $("#859886693457639").bindEntity(json);
                $("#859886693457639").open("编辑", function (win) {
                    if (!tt.validateForm("859886693457639")) {
                        return false;
                    }
                    var update = $("#859886693457639").getContext();
                    $.post("/Biz/User/SaveUser", update, function (r) {
                        var newjson = $.combineJson(json, $.toJsResult(r));
                        if (r.ID > 0) {
                            $("#9503364891990309").datagrid("updateRow", json, newjson);
                            layer.close(win);
                        }
                        else {
                            $.error("保存失败，请重试！");
                        }
                    });

                    return false;
                });
            });

        });

        /*增加验证信息----------Start*/

        var f7044811142488172 = new tt.Field("用户名", "", "7044811142488172").setMsgId("layer-error-msg");


        tt.vf.req.add(f7044811142488172);

        new tt.LV().set(6, 30).add(f7044811142488172);

        var f5445589124838697 = new tt.Field("用户级别", "", "5445589124838697").setMsgId("layer-error-msg");


        tt.vf.req.add(f5445589124838697);


        var f28813988185502243 = new tt.Field("用户类型", "", "28813988185502243").setMsgId("layer-error-msg");


        tt.vf.req.add(f28813988185502243);


        var f5394484878913651 = new tt.Field("Email地址", "", "5394484878913651").setMsgId("layer-error-msg");


        tt.vf.req.add(f5394484878913651);

        tt.vf.email.add(f5394484878913651);

        var f5454595364665242 = new tt.Field("联系电话", "", "5454595364665242").setMsgId("layer-error-msg");


        tt.vf.req.add(f5454595364665242);

        new tt.RV().set(new RegExp("^(0|86|17951)?(13[0-9]|15[012356789]|17[678]|18[0-9]|14[57])[0-9]{8}$"), "输入数据格式错误").add(f5454595364665242);
        /*增加验证信息----------End*/
    </script>
}


